<%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :model %>
    <%= f.input :make %>
    <%= f.input :registered_until %>
    <%= f.association :driver %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
